{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "~hotkey": ["src/hotkey"],
            "~sqlite": ["src/sqlite"],
            "~win32/*": ["src/win32/*"],
            "~shims/*": ["src/shims/*"],
            "~common/*": ["src/common/*"],
            "~component/*": ["src/component/*"]
        }
    },

    "types": ["element-plus/global"],
    "files": ["node_modules/vite/client.d.ts"],
    "include": [
        "src/shims/**/*.d.ts",
        "src/win32/**/*",
        "src/component/**/*.ts",
        "src/component/**/*.vue",
        "src/common/**/*.ts",
        "src/main/**/*",
        "src/renderer/**/*.ts",
        "src/renderer/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "**/build/*.js"
    ]
}
